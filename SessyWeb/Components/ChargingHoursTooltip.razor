@inherits BaseComponent

@{
    var style = "padding: 0px; margin: 0px; height: 20px;";
    var fixedWidthStyle = $"{style} width: 150px; height: 25px;";
    var state = $"   {QuarterlyInfo?.DisplayState}";
}

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Date and time" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenDatePicker Value=@QuarterlyInfo?.Time ShowButton="false" disabled TValue="DateTime" Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Price" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.0000" ShowUpDown="false" Value=@QuarterlyInfo?.Price disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Market price" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.0000" ShowUpDown="false" Value=@QuarterlyInfo?.MarketPrice disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Revenue" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.Profit disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="State" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenTextBox Value=@state disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Solar power" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.SolarPowerPerQuarterHour disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Global radiation" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.SolarGlobalRadiation disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Charge left %" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.ChargeLeftPercentage disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Charge needed" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.ChargeNeeded disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Est. consumption" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.EstimatedConsumptionPerQuarterHour disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="8">
        <RadzenTextBox Value="Session cost" disabled Style=@fixedWidthStyle />
    </RadzenColumn>
    <RadzenColumn Size="2">
        <RadzenNumeric Format="0.00" ShowUpDown="false" Value=@QuarterlyInfo?.SessionCost disabled Style=@fixedWidthStyle />
    </RadzenColumn>
</RadzenRow>
