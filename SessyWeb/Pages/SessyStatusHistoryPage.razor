@page "/sessystatushistory"
@inherits PageBase
@using SessyData.Model
@using Radzen

<a>History</a>

<RadzenDataGrid @ref="historyGrid" Data="@StatusHistoryList" Context="data" Count="@count" LoadData="@LoadData" AllowSorting="true" AllowFiltering="true" AllowPaging="true" PageSize="20" PagerHorizontalAlign="HorizontalAlign.Center">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(SessyStatusHistory.Time)" Title="Time"/>
        <RadzenDataGridColumn Property="@nameof(SessyStatusHistory.Name)" Title="Name" />
        <RadzenDataGridColumn Property="@nameof(SessyStatusHistory.Status)" Title="Status" />
        <RadzenDataGridColumn Property="@nameof(SessyStatusHistory.StatusDetails)" Title="Details"/>
    </Columns>
</RadzenDataGrid>