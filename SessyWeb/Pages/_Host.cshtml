@page "/"
@namespace SessyWeb.Pages
@using Microsoft.AspNetCore.Components
@using Radzen
@using Radzen.Blazor
@using SessyWeb.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Radzen.ThemeService ThemeService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
	Layout = "_Layout";
}

<head>
	<link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>

<component type="typeof(App)" render-mode="ServerPrerendered" />


@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<script>
    // Read the SessyTheme cookie for later use.
    var theme = '@HttpContextAccessor.HttpContext?.Request.Cookies["SessyTheme"]';
    if (theme) {
        localStorage.setItem('MyApplicationTheme', theme);
    }
</script>