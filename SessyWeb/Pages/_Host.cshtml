@page "/"
@namespace SessyWeb.Pages
@using Microsoft.AspNetCore.Components
@using Radzen
@using Radzen.Blazor
@using SessyWeb.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Radzen.ThemeService ThemeService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
	Layout = "_Layout";
}

<head>
	<link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link rel="manifest" href="manifest.json">
    <link rel="apple-touch-icon" href="icons/icon-192.png">

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
</head>

<component type="typeof(App)" render-mode="ServerPrerendered" />

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<script>
    // Read the SessyTheme cookie for later use.
    var theme = '@HttpContextAccessor.HttpContext?.Request.Cookies["SessyTheme"]';
    if (theme) {
        localStorage.setItem('MyApplicationTheme', theme);
    }
</script>